{
  "compilerOptions": {
    // Target modern JavaScript for better performance
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    
    // Strict type checking (future-proof)
    "strict": true,
    "noEmit": true,
    "allowJs": false,
    "skipLibCheck": true,
    
    // Modern module system
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    
    // JSON and asset handling
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    
    // Code generation
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "jsx": "preserve",
    "incremental": true,
    
    // Build optimizations
    "removeComments": true,
    "sourceMap": true,
    
    // Additional strict checks for future-proofing
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    
    // Path mapping with granular aliases
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/features/*": ["./src/features/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/types/*": ["./src/types/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/styles/*": ["./src/styles/*"]
    },
    
    // Next.js integration
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts", 
    "src/custom.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", ".next"],
  "types": ["jest", "node"]
}
